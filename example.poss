$color = blue
$size = 12px

struct makeRound ($border = 12px) 
	border-radius = $border
	-webkit-border-radius = $border

id header 
	makeRound

class header 
	font-style = italic

class footer 
	@inherit<id>(header)
	makeRound = 10px

id content 
	background-color = $color

id test-inherit
	@inherit<class>(footer)
	font-size = $size
	height = @calc<px>(mult, 12, 9)
